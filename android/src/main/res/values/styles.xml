<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="KeyRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:divider">@drawable/key_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Key.Num">
        <item name="android:background">@drawable/key_background_num</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Key.Operator">
        <item name="android:background">@drawable/key_background_operator</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Key.Other">
        <item name="android:background">@drawable/key_background_other</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>